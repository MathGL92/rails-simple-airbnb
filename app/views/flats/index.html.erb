<div class="container">
  <div class="row mt-3">

    <div class="col-12">
      <h1 class="my-3">All our flats (<%= @flats.count %>)</h1>
      <%= render "shared/flash" %>
    </div>

  </div>

  <div class="row mt-3">
    <div class="col">
      <% if @query %>
        <p>You searched for <strong><%= @query %></strong>. We found <%= @flats.count %> flats out of our <%= Flat.count %> on our website.</p>
      <% else %>
        <p>All <%= Flat.count %> flats.</p>
      <% end %>
    </div>
  </div>

  <div class="row mt-3">
    <% @flats.each do |flat| %>
      <div class="col-4">
        <div class="flat-card">
          <div class="flat-card-image" style="background-image: url('<%= flat.picture_url %>')"></div>
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h4><%= flat.name %></h4>
            </div>
            <p><%= flat.address %></p>
            <div class="d-flex">
              <div class="d-flex">
                <span class="mr-2"><%= icon('fas', 'users')%></span><span><%= flat.number_of_guests %></span>
              </div>
              <div class="d-flex ml-3">
                <span class="mr-2"><%= icon('fas', 'euro-sign')%></span><span><%= flat.price_per_night %></span>
              </div>
            </div>
          </div>
          <div class="flat-card-actions">
            <span><%= link_to "More info", flat_path(flat) %></span>
            <span class="ml-3 text-warning"><%= link_to "Edit", edit_flat_path(flat), class:"text-warning" %></span>
            <span class="ml-3"><%= link_to "Remove", flat_path(flat), method: :delete, data: { confirm: "Are you sure?"}, class:"text-danger" %></span>
          </div>
        </div>
      </div>
    <% end %>

  </div>
</div>
